const mysql = require('mysql');

async function connectToMysql() {
  const connection = mysql.createConnection({
    host: "127.0.0.1",
    user: 'root',
    password: '',
    database: 'slashhash_db'
  });

  return new Promise((resolve, reject) => {
    connection.connect((err) => {
      if (err) {
        reject(err);
        return;
      }
      resolve(connection);
    });
  });
}

module.exports = {
  connectToMysql
};
